<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_8"
    android:layout_marginHorizontal="@dimen/margin_4"
    android:background="@null"
    card_view:cardElevation="@dimen/margin_4"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_playlist_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_gravity="center_horizontal|center_vertical"
            android:scaleType="centerCrop"
            tools:src="@drawable/album"
            />
       <!-- android:layout_width="@dimen/margin_160"
        android:layout_height="@dimen/margin_160" -->

        <TextView
            android:id="@+id/name_playlist_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/text_playlist_layout"
            tools:text="Название плейлиста очень длинное"/>
        <TextView
            android:id="@+id/count_playlist_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/text_playlist_layout"
            tools:text="148 треков"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>