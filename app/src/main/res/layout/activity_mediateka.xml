<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_settings_window"
    android:orientation="vertical"
    tools:context=".ui.MediatekaActivity.MediatekaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_48"
        android:layout_margin="@dimen/margin_4"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/button_search_back"
            style="@style/ImageViewLayoutSettingsWindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_12"
            android:text="@string/button4_text_mediateka"
            android:textColor="@color/text_button_settings_window"></TextView>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabRippleColor="@color/thumb_check"
        app:tabTextColor="@color/black"
        app:tabIndicatorColor="@color/black"
        android:visibility="visible"
        app:tabMode="fixed"
     />

    <!--android:layout_marginLeft="@dimen/margin_4"
    android:layout_marginRight="@dimen/margin_4"-->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>

</LinearLayout>
