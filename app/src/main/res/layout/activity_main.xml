<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_window"
    android:orientation="vertical"
    android:padding="@dimen/medium_padding">

    <TextView
        style="@style/TextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_marginBottom="@dimen/margin_32"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22" />

    <Button
        android:id="@+id/button_search"
        style="@style/ButtonMainWindow"
        android:layout_margin="@dimen/margin_8"
        android:layout_weight="1"
        android:text="@string/button1_text_search"
        app:icon="@drawable/search"></Button>

    <Button
        android:id="@+id/button_media"
        style="@style/ButtonMainWindow"
        android:layout_margin="@dimen/margin_8"
        android:layout_weight="1"
        android:text="@string/button2_text_media"
        app:icon="@drawable/media"></Button>

    <Button
        android:id="@+id/button_settings"
        style="@style/ButtonMainWindow"
        android:layout_marginHorizontal="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_weight="1"
        android:text="@string/button3_text_settings"
        app:icon="@drawable/settings"></Button>
</LinearLayout>
