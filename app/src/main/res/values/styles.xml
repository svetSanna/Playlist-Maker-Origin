        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/edittext_size</item>
        <item name="android:textFontWeight">400</item>
       <!-- <item name="android:background">@drawable/edittext_new_playlist_frame</item>-->
        <item name="android:inputType">text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_16</item>
        <item name="lineHeight">18.75sp</item>
    </style>
