<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainWindow" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>

        <item name="android:textColor">@color/text_button_main_window</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="lineHeight">25.78sp</item>

        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/medium_padding</item>
        <item name="iconTint">@color/text_button_main_window</item>
    </style>
    <style name="ButtonRefresh" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:textColor">@color/button_refresh_text</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="lineHeight">16.41sp</item>

        <item name="cornerRadius">@dimen/corner_radius_54</item>
        <item name="android:backgroundTint">@color/button_refresh_background</item>
    </style>
    <style name="ButtonNewPlaylist" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_44</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:textColor">@color/button_new_playlist_text</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="lineHeight">18.75sp</item>

        <item name="android:background">@drawable/button_new_playlist_selector</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="TextTrackName">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="lineHeight">18.75sp</item>
    </style>
    <style name="TextArtistName">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="lineHeight">12.89sp</item>
    </style>
    <style name="FrameLayoutSettingsWindow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_12</item>
        <item name="android:layout_marginRight">@dimen/margin_14</item>
    </style>
    <style name="ImageViewLayoutSettingsWindow">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:layout_margin">@dimen/margin_12</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="TextViewLayoutSettingsWindow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginVertical">@dimen/margin_21</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="MySwitchStyle" parent = "Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/selector_switch_thumb</item>
        <item name="trackTint">@color/selector_switch_track</item>
    </style>
    <style name="EditTextSearch">
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textColorHint">@color/edit_textHint</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/edittext_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@drawable/corner_radius</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableLeft">@drawable/ic_search_for_edit</item>
        <item name="android:paddingLeft">@dimen/margin_10</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="lineHeight">18.75sp</item>
    </style>
    <style name="EditTextNewPlaylist">
        <item name="android:textColor">@color/edit_text_new_playlist</item>
       <!-- <item name="android:textColorHint">@color/edit_text_new_playlist</item>-->
